<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/css/vegetable.css" rel="stylesheet" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("partials/navbar") %>
    <form>
      <input
        type="text"
        name="name"
        placeholder="search by name"
        style="width: 80%"
      />
      <a name="search"><button class="btn btn-primary">search</button></a>
    </form>
    <div class="text-center">
      <h1>Data Vegie</h1>
      <a href="/vegetable/add" class="btn btn-primary text-center"
        >Add vegies</a
      >
    </div>

    <% data.forEach((el) => { %>
    <div class="row:after">
      <div
        class="column"
        style="
          float: left;
          width: 30%;
          display: flex;
          height: 60vh;
          padding-left: 10vh;
        "
      >
        <div class="card card-body h-100">
          <img
            src="<%= el.image %>"
            class="card-img-top"
            alt="..."
            style="width: 256px; height: 144px"
          />
          <div class="card-body">
            <h5 class="card-title"><%= el.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= el.showPrice %></h6>
            <p class="card-text"><%= el.description %></p>
            <a href="/vegetable/<%= el.id %>/edit" class="btn btn-primary"
              >DETAIL</a
            >
            <a href="/vegetable/<%= el.id %>/delete" class="btn btn-danger"
              >DELETE</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </body>
  <body class="back"></body>
</html>
