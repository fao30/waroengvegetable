<html>
  <head>
    <meta charset="utf-8" />
    <link href="/css/invoice.css" rel="stylesheet" type="text/css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Invoice</title>
  </head>
  <body>
    <center>
      <h1>INVOICE</h1>
    </center>
    <p class="text-center">Nama Pembeli: <%=data[0].User.username%></p>
    <center>
      <table style="border: 1px solid black">
        <tr>
          <th>No</th>
          <th>Jenis Barang</th>
          <th>Harga Satuan</th>
          <th>Jumlah</th>
          <th>Total/Item</th>
        </tr>
        <% sortBuy.nama.forEach((el,i)=>{ %>
        <tr>
          <th><%=i+1%></th>
          <th><%=el%></th>
          <th><%=sortBuy.harga[i]%></th>
          <th><%=sortBuy.count[el]%></th>
          <th><%=sortBuy.count[el]*sortBuy.harga[i]%></th>
        </tr>
        <%})%>
        <tr>
          <th></th>
        </tr>
        <tr>
          <th colspan="4">TOTAL BIAYA <%=harga%></th>
        </tr>
      </table>
    </center>
  </body>
  <body class="back"></body>
</html>
